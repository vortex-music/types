{
  "compilerOptions": {
    "outDir": "./dist", // Output directory
    "rootDir": "./src", // Ensures src/ structure is mirrored in dist/
    "declaration": true, // Emit .d.ts files
    "declarationMap": true, // Emit source maps for .d.ts files
    "emitDeclarationOnly": true, // Only emit type declarations
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": [
    "src/**/*"
  ]
}